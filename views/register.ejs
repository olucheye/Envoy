<%- include('partials/header'); -%> 
<%-  include('partials/nav1'); -%> 

<div class="mt-3 py-0 px-4 row">
    <div class="col-12">
        <h4 class="my-4 p-3 text-center or"><strong>Register below</strong></h4>
    </div>

    <div class="col-12 col-md-7 mx-auto">
        <%# passing in error messages %> 
        <%- include('partials/errorMsgs'); -%> 
        <%# :@desc Signup with google email %> 
        <!--- Get to define parameter in schema
        <a class="btn btn-block btn-social btn-google my-2">
            <span class="fab fa-google"></span> Sign up with Google
        </a>
        ---->

        <p class="text-center my-2">OR</p>

        <form action="/register" method="POST">
            <div class="form-group">
                <label for="userEmail">Username</label>
                <input type="text" class="form-control" id="username" name="username" value="<% typeof username != 'undefined' ? username: '' %>" />
            </div>
            <div class="form-group">
                <label for="userPassword">Password</label>
                <input type="password" class="form-control" id="userPassword" name="password" value="<% typeof password != 'undefined' ? password: '' %>" />
            </div>
            <button type="submit" class="btn btn-primary text-warning">Sign Up</button>
        </form>

        <div class="pt-3"> 
            <p class="signupReq">Got an account? <a href="/login" class="landingSignup"><strong>Login</strong></a></p>   
            
        </div>
    </div>
</div>

<%- include('partials/footer'); -%> 