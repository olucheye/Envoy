<%- include('partials/header'); -%> 
<%-  include('partials/nav1'); -%> 

<div class="mt-3 py-0 px-4">
    <h4 class="my-4 p-3 text-center or"><strong>Register below</strong></h4>
    
    <%# :@desc Signup with google email %> 
    <!--- Get to define parameter in schema---->
    <a class="btn btn-block btn-social btn-facebook my-2">
        <span class="fab fa-google"></span> Sign up with Google
    </a>

    <p class="text-center my-2">OR</p>

    <form action="/register" method="POST">
        <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="userEmail">Username</label>
                <input type="text" class="form-control" id="username" name="username">
            </div>
            <div class="form-group">
                <label for="userPassword">Password</label>
                <input type="password" class="form-control" id="userPassword" name="password">
            </div>
        </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>

    <div class="pt-3"> 
        <p class="signupReq">Got an account? <a href="/login" class="landingSignup"><strong>Login</strong></a></p>   
        
    </div>
</div>

