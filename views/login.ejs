<%- include('partials/header'); -%> 
<%-  include('partials/nav1'); -%> 

<div class="mt-3 py-0 px-4 row">
    <div class="col-12">
        <h4 class="my-4 p-3 text-center or"><strong>Welcome back</strong></h4>
    </div>
    <div class="col-12 col-md-7 mx-auto mt-md-4">
        <%# passing in error messages %> 
        <%- include('partials/errorMsgs'); -%> 
        
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" value="<% typeof username != 'undefined' ? username: ' ' %>">
            </div>
            <div class="form-group">
                <label for="userPassword">Password</label>
                <input type="password" class="form-control" id="userPassword" name="password" value="<% typeof password != 'undefined' ? password: ' ' %>">
            </div>
            <button type="submit" class="btn btn-primary text-warning">Submit</button>
        </form>
        
        <div class="pt-4">    
            <a href="/register" class="landingSignup"><strong>Register an Account</strong></a>
        </div>
    </div>
</div>


<%- include('partials/footer'); -%> 